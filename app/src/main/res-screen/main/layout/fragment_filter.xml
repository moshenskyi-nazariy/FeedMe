<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_margin"
        android:alpha="0.86"
        android:gravity="start|center_vertical"
        android:text="@string/filter_dialog_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dialog_title_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="@android:color/black" />

    <CheckBox
        android:id="@+id/sort_by_name_asc"
        style="@style/DialogElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_by_name_asc" />

    <CheckBox
        android:id="@+id/sort_by_name_desc"
        style="@style/DialogElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_by_name_desc" />

    <CheckBox
        android:id="@+id/sort_by_distance_nearest"
        style="@style/DialogElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_by_distance_nearest" />

    <CheckBox
        android:id="@+id/sort_by_distance_distant"
        style="@style/DialogElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin"
        android:text="@string/sort_by_distance_distant" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/small_margin">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>