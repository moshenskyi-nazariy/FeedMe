<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>

        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowEnterTransition" tools:targetApi="lollipop">@transition/slide</item>
        <item name="android:windowExitTransition" tools:targetApi="lollipop">@transition/slide</item>
        <item name="android:windowReenterTransition" tools:targetApi="lollipop">@transition/slide</item>
        <item name="android:windowReturnTransition" tools:targetApi="lollipop">@transition/slide</item>
    </style>

</resources>
