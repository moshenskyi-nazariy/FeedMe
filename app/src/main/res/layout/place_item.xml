<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_padding"
    android:layout_marginEnd="@dimen/card_padding"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main__list_place_photo"
            android:layout_width="@dimen/photo_size"
            android:layout_height="@dimen/photo_size"
            android:contentDescription="@string/place_photo"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_size"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main__list_name"
                style="@style/TitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Title" />

            <TextView
                android:id="@+id/main__list_address"
                style="@style/BodyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                tools:text="SomeStreet St." />

            <TextView
                android:id="@+id/main__place_distance"
                style="@style/InfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body_text_size"
                tools:text="25 m from you" />

            <!--<RatingBar
                android:id="@+id/main__list_rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/ratingIndicator"/>-->
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>