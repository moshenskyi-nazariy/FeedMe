<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/backdrop_subtitle_height"
        android:textSize="16sp"
        android:background="@drawable/bottom_sheet_shape"
        android:paddingTop="@dimen/backdrop_subtitle_vertical_margin"
        android:paddingBottom="@dimen/backdrop_subtitle_vertical_margin"
        android:paddingStart="@dimen/large_margin"
        android:paddingEnd="@dimen/large_margin"
        tools:text="12 items"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSilver"
        android:paddingBottom="@dimen/small_margin"
        android:layout_gravity="bottom"/>
</merge>