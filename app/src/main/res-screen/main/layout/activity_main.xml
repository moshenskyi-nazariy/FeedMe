<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_open_backdrop_24dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/app_name"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/backdrop_back_layer"
        layout="@layout/backdrop_back_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="72dp"
        android:visibility="visible"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:elevation="8dp"
        android:orientation="vertical">

        <include
            layout="@layout/backdrop_subtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/backdrop_subtitle_height" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main__place_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clipToPadding="false"
            android:layoutAnimation="@anim/layout_animation_fade_in"
            android:paddingEnd="@dimen/card_end_margin"
            android:paddingStart="@dimen/large_margin"
            android:paddingTop="@dimen/small_margin"
            android:paddingBottom="@dimen/text_padding" />

    </LinearLayout>

</FrameLayout>